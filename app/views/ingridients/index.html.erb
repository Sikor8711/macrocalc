<p id="notice"><%= notice %></p>

<h1>Ingridients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume</th>
      <th>Cals</th>
      <th>Fats</th>
      <th>Carbs</th>
      <th>Proteins</th>
      <th>Dish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingridients.each do |ingridient| %>
      <tr>
        <td><%= ingridient.name %></td>
        <td><%= ingridient.volume %></td>
        <td><%= ingridient.cals %></td>
        <td><%= ingridient.fats %></td>
        <td><%= ingridient.carbs %></td>
        <td><%= ingridient.proteins %></td>
        <td><%= ingridient.dish_id %></td>
        <td><%= link_to 'Show', ingridient %></td>
        <td><%= link_to 'Edit', edit_ingridient_path(ingridient) %></td>
        <td><%= link_to 'Destroy', ingridient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

